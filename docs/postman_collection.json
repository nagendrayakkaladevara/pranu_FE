    {
      "name": "Auth",
      "item": [
        {
          "name": "Register (Admin)",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "var jsonData = pm.response.json();",
                  "if (jsonData.tokens) {",
                  "    pm.collectionVariables.set('adminToken', jsonData.tokens.access.token);",
                  "    pm.collectionVariables.set('accessToken', jsonData.tokens.access.token);",
                  "}",
                  "if (jsonData.user) {",
                  "    pm.collectionVariables.set('userId', jsonData.user.id);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"admin@example.com\",\n  \"password\": \"password123\",\n  \"name\": \"Admin User\",\n  \"role\": \"ADMIN\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/v1/auth/register",
