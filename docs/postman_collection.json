            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{lecturerToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/v1/quizzes?page=1&limit=10",
              "host": ["{{baseUrl}}"],
              "path": ["v1", "quizzes"],
              "query": [
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "limit",
                  "value": "10"
                },
                {
                  "key": "title",
                  "value": "",
                  "disabled": true
                },
                {
                  "key": "status",
                  "value": "DRAFT",
                  "disabled": true
                },
                {
                  "key": "sortBy",
                  "value": "createdAt:desc",
                  "disabled": true
                }
              ]
            },
            "description": "List quizzes with filters: title, status (DRAFT/PUBLISHED/ARCHIVED), sortBy."
          }
        },
        {
          "name": "Get Quiz by ID",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{lecturerToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/v1/quizzes/{{quizId}}",
              "host": ["{{baseUrl}}"],
              "path": ["v1", "quizzes", "{{quizId}}"]
            },
            "description": "Get quiz details with populated questions and assigned classes."
          }
        },
        {
          "name": "Update Quiz",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{lecturerToken}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"startTime\": \"2026-01-01T00:00:00.000Z\",\n  \"endTime\": \"2026-12-31T23:59:59.000Z\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/v1/quizzes/{{quizId}}",
              "host": ["{{baseUrl}}"],
              "path": ["v1", "quizzes", "{{quizId}}"]
            },
            "description": "Update quiz settings. Can update: title, description, durationMinutes, totalMarks, passMarks, shuffleQuestions, startTime, endTime."
          }
        },
        {
          "name": "Add Questions to Quiz",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{lecturerToken}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"questionIds\": [\"{{questionId}}\"]\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/v1/quizzes/{{quizId}}/questions",
              "host": ["{{baseUrl}}"],
              "path": ["v1", "quizzes", "{{quizId}}", "questions"]
            },
            "description": "Add questions to a quiz. Uses $addToSet to avoid duplicates."
          }
        },
        {
          "name": "Publish Quiz",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{lecturerToken}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"classIds\": [\"{{classId}}\"]\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/v1/quizzes/{{quizId}}/publish",
              "host": ["{{baseUrl}}"],
              "path": ["v1", "quizzes", "{{quizId}}", "publish"]
            },
            "description": "Publish a quiz to specific classes. Requires: quiz has questions, startTime, and endTime set. Changes status to PUBLISHED."
          }
        },
        {
          "name": "Delete Quiz",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{lecturerToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/v1/quizzes/{{quizId}}",
              "host": ["{{baseUrl}}"],
              "path": ["v1", "quizzes", "{{quizId}}"]
            },
            "description": "Delete a quiz. Returns 204 No Content."
          }
        }
      ]
    },
    {
      "name": "Exam (Student Only)",
      "item": [
        {
          "name": "List Available Quizzes",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{studentToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/v1/exam/quizzes",
              "host": ["{{baseUrl}}"],
              "path": ["v1", "exam", "quizzes"]
            },
            "description": "List published quizzes available for the logged-in student (based on class enrollment and time window)."
          }
        },
        {
          "name": "Start Quiz Attempt",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "var jsonData = pm.response.json();",
                  "if (jsonData.attempt && jsonData.attempt.id) {",
                  "    pm.collectionVariables.set('attemptId', jsonData.attempt.id);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{studentToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/v1/exam/quizzes/{{quizId}}/start",
              "host": ["{{baseUrl}}"],
              "path": ["v1", "exam", "quizzes", "{{quizId}}", "start"]
            },
            "description": "Start a quiz attempt. Returns attempt info and questions (without correct answers). Auto-saves `attemptId`."
          }
        },
        {
          "name": "Submit Quiz Attempt",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{studentToken}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"responses\": [\n    {\n      \"questionId\": \"<questionId from start response>\",\n      \"selectedOptionId\": \"<optionId from start response>\"\n    }\n  ]\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/v1/exam/attempts/{{attemptId}}/submit",
              "host": ["{{baseUrl}}"],
              "path": ["v1", "exam", "attempts", "{{attemptId}}", "submit"]
            },
            "description": "Submit quiz answers. Returns score and totalMarks. Use questionId and selectedOptionId from the start attempt response."
          }
        }
      ]
    },
    {
      "name": "Analytics (Admin/Lecturer)",
      "item": [
        {
          "name": "Get Quiz Results",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{lecturerToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/v1/analytics/results/{{quizId}}",
              "host": ["{{baseUrl}}"],
              "path": ["v1", "analytics", "results", "{{quizId}}"]
            },
            "description": "Get quiz statistics: total attempts, average score, highest score, pass count, pass rate, and all individual results."
          }
        },
        {
          "name": "Get Student Stats",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{lecturerToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/v1/analytics/student/{{studentId}}",
              "host": ["{{baseUrl}}"],
              "path": ["v1", "analytics", "student", "{{studentId}}"]
            },
            "description": "Get a student's performance history: all quiz attempts with scores and pass/fail status."
          }
        }
      ]
    }
  ]
}
